{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "paths": {
      "@assets": [
        "./app/assets/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
}